.hidden
	display none


.subnav
	display flex
	justify-content space-between
	height 60px

#navlogo
	height 30px
	padding 15px

body
	font-family 'Montserrat', sans-serif
	background-color #111111
	color white

.flex-container
	height 100%

#logo
	width 60%
	margin auto

.buttons, .subnavbuttons
	display flex
	flex-direction row
	flex-wrap wrap
	justify-content space-around
	color white

.subnavbuttons
	@media screen and (max-width: 767px)
		display none

.hamburger
	height 60px
	display flex
	@media screen and (min-width: 768px)
		display none

.hamburger-icon
	margin auto
	padding 15px

.button, .subnavbutton
	margin auto
	height 60px
	width 300px
	display flex
	justify-content space-around
	&:hover
		background-color #222222

.subnavbutton
	width 150px

.subnavbuttontext, .button-text
	margin auto
	display block

.top-half
	height 60%
	display flex
	justify-content space-around
	flex-direction column

.bottom-half
	height 40%

a
	color: inherit
	text-decoration: none

.page-container
	display flex
	flex-direction column
	justify-content flex-start
	align-items center

.logo-header
	display flex
	flex-direction column
	justify-content space-around
	width 50%
	margin 25px

.page
	width 60%

.email
	margin 50px
	text-align center

img
	max-width 100%
	height auto
