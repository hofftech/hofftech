extends _rootlayout

block head
	link(href = "/styl/navbar.css" rel = "stylesheet" type = "text/css")
	block sub_head

block navbar
	nav.navbar.navbar-default.navbar-fixed-top
		.container
			//- // Brand and toggle get grouped for better mobile display
			.navbar-header
				button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1', aria-expanded='false')
					i.fa.fa-bars
				a.navbar-brand(href='/', target = "_self")
					img(src = "/img/hofftech_logo.png")
			//- // Collect the nav links, forms, and other content for toggling
			#bs-example-navbar-collapse-1.collapse.navbar-collapse
				ul.nav.navbar-nav.navbar-right
					li
						a.btn.btn-default(href = "/ken", target = "_self") ken
					li
						a.btn.btn-default(href = "/projects", target = "_self") projects
					li
						a.btn.btn-default(href = "/games", target = "_self") games
					li
						a.btn.btn-primary(href = "mailto:ken@hoff.tech", target = "_self") say hello

block body
	block sub_body
